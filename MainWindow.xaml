<Window x:Class="Twich.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twich"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0" x:Name="PlayerColumn"/>
        </Grid.ColumnDefinitions>

        <wv2:WebView2 x:Name="webView" />

        <Grid Grid.Column="1" Background="#111">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
                <Button x:Name="PiPButton" Content="PiP" Width="60" Height="30" Margin="0,0,10,0" Click="PiPButton_Click"/>
                <TextBox x:Name="StreamUrlTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
                <Button Content="Play URL" Width="80" Height="30" Click="PlayUrlButton_Click"/>
            </StackPanel>
            <vlc:VideoView x:Name="VideoView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,10"/>
        </Grid>

        <Button x:Name="TogglePlayerButton" Content="Show Player" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,120,0" Click="TogglePlayerButton_Click"/>
    </Grid>
</Window>
